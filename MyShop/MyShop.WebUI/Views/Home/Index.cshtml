@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Products Page";
}

<h1>@ViewBag.Title</h1>

<div class="container-fluid">
    @foreach (var item in Model)
    {
        <div class="col-md-4" style=" padding:5px; margin:5px; border:solid thin whitesmoke;">
            <div class="col-md-12">
                <img class="img-responsive" style="max-height:250px;" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <h4>@item.Price</h4>
            </div>

            <div class="col-md-12" align="right">
                <a href="#" class="btn btn-success btn-sm">Add to Basket</a>
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>
